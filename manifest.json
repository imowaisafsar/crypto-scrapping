{
    "manifest_version": 2,
    "name": "CryptoFetcher",
    "description": "Crypto currency data fetcher",
    "version": "1.0.0",
    "icons": {
        "128": "icon.png"
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html",
        "default_title": "CryptoFetcher"
    },
    "permissions": [
        "storage",
        "webNavigation",
        "tabs",
        "identity",
        "webRequest",
        "https://*/*",
        "http://*/*",
        "file://*/*",
        "debugger"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "css": [
                "style.css"
            ],
            "js": [
                "content.js"
            ],
            "all_frames": true
        }
    ]
}